ff-title() {
  font-family: 'VAG-Rounded-bold', sans-serif;
  font-weight: bold;
}

ff-body() {
  font-family: 'VAG-Rounded-light', sans-serif;
  font-weight: normal;
  font-size: $baseFont*1.6;
  line-height: $lineHeight*1.5;
  margin-bottom: $vspacing*1.5;
  +above(m) {
    font-size: $bodyCopy;
  }
}

button(bgc) {
  display: inline-block;
  color: #fff;
  background-color: bgc;
  padding: $vspacing $hspacing*3;
  border: 0;
  font-size: $outerCore;
  cursor: pointer;
  border-bottom: 3px solid darken(bgc, 20%);
  &:hover {
    border-color: darken(bgc, 40%);
    background-color: lighten(bgc, 10%);
    i {
      transform: rotate(20deg);
    }
  }
  &.disabled {
    cursor: auto;
    background: desaturate(bgc, 60%);
    opacity: .6;
  }
  i {
    transition: transform .5s ease-in-out;
    margin-right: $hspacing;
  }
}
