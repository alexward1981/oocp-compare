&-cost {
  cf();
  &__scale {
    cf();
    .u-primary & {
      span(1/3);
    }
    .u-secondary & {
      span(1);
    }
    margin-bottom: $vspacing;
    img {
      width: 100%;
      height: auto;
    }
    &__label {
      span(1/2);
      &:last-of-type {
        text-align: right;
      }
    }
  }
  &__info {
    clear:both;
  }
}
