/**
 * Setup
 *
 * Setting up the grid and primary styles
 *
 **/

body {
  ff-body();
  color: $text-colour;
  background-color: $panel-colour;
}

.page-wrapper {
  cf();
  background-color: #fff;
}

.pretitle {
  color: $grey-1;
  font-size: $mantle;
}

h1,
h2,
h3 {
  ff-title();
  a {
    color: currentColor;
  }
}

h1 {
  font-size: $crust;
}
h2 {
  font-size: $innerCore;
  margin-bottom: $vspacing*2;
}
h3 {
  font-size: $innerCore;
}
h4 {
  font-size: $outerCore;
}

a {
  color: $link-colour;
  text-decoration: underline;
  &:hover {
    color: $link-hover-colour;
  }
  &:focus {
    background-color: $focus-colour
  }
  &[rel="external"] {
    &:after {
      content: ''
      display inline-block
      width: $hspacing*1.1
      height: $vspacing*1.2
      margin-left 1px //pixel value used as this is just a spacer
      overflow hidden
      background: url(/static/images/external-link.png);
      background-position left top
    }
    &:hover {
      &:after {
        background-position: left bottom;
      }
    }
  }
}

hr {
  margin: $vspacing*3 0;
}

p {
    line-height: $lineHeight*1.2;
  +above(l) {
    font-size: $bodyCopy;
    line-height: $lineHeight*1.2;
  }
  margin-bottom: $vspacing;
  &.lead {
    font-size: $lead;
  }
}

.skip-link {
  position: absolute;
  left: -100%;
  top: -100%;
}

.wrapper {
  cf();
  position: relative;
  padding: 0 2.5%;
  +above(l) {
   center(1020px);
  }
}

.col {
  &.primary {
    +above(m) {
      col(2/3);
    }
  }
  &.sidebar {
    padding: $spacing*3
    background-color: $grey-3;
    +above(m) {
      col(1/3);
    }
  }
}

table {
  width: 100%;
  font-size: $baseFont*1.6
  th,
  td {
    padding: $vspacing 0;
  }
  th {
    font-weight: bold;
    border-bottom: 1px solid $grey-2;
  }
}

.primary,
.sidebar {
  ul {
    list-style-type: disc;
    margin-left: $hspacing*3;
    li {
      margin-bottom: $vspacing;
    }
  }
}

.list-table {
  .item {
    cf();
    margin-bottom: $vspacing*2;
  }
  h2 {
    col(1/5);
  }
  .right {
    col(4/5)
  }

  .small-copy {
    display: block;
    color: $grey-1;
  }

  .coins {
    cf();
    list-style-type: none;
    margin-left: 0;
    margin-bottom: $vspacing;
    li {
      float:left;
      padding: 0 ($hspacing/1.5);
      line-height: 1.3;
      margin: 0 ($hspacing/2);
      border-radius: 100%;
      font-weight: bold;
      &.on {
        background-color: #fcef6d;
        border: 1px solid #817715;
        color: #817715;
      }
      &.off {
        background-color: $white;
        border: 1px solid $grey-1;
        color: $grey-1;
      }
    }
  }

}
