<% include components/header.ejs %>
<div class="full divider">
  <div class="c c-headed-text u-primary">
    <h1><%= content.title %></h1>
    <%- content.introduction %>
  </div>
  <div class="c c-quick-links u-secondary">
    <ul>
      <% content.quicklinks.forEach(function(ql) { %>
        <li>
          <a href="<%= ql.url%>"><%= ql.name %></a>
        </li>
      <% }) %>
    </ul>
  </div>
</div>
<div class="full">
   <div class="c-who-is-involved c-who-is-involved--legend">
     <h2>Key:</h2>
     <ul>
       <li class="parentguardian">Parent/Guardian</li>
       <li class="mediator">Mediator</li>
       <li class="lawyersolicitor">Lawyer/Solicitor</li>
       <li class="judgecourt">Judge/Court</li>
     </ul>
   </div>
   <ul class="c c-article-list">
  <% pages.forEach(function(page, i) { %>
    <li>
      <section class="c-article-list__summary divider">
        <div class="u-primary">
          <h1><a href="<%= page.slug %>"><%= page.title %></a></h1>
          <%- page.introduction %>
          <div class="c-usp-callout">
            <blockquote>
              <%- page.usp_callout %>
            </blockquote>
          </div>
          <dl class="c-details__infosheet">
            <dt>Cost:</dt>
            <dd class="c-cost">
              <div class="c-cost__scale">
                <img src="<%= page.cost.image_link %>" alt="The scale can range from quite low to very high"/>
                <span class="c-cost__scale__label">0</span>
                <span class="c-cost__scale__label">&pound;100k</span>
              </div>
              <div class="c-cost__info">
                <%- page.cost.info %>
              </div>
            </dd>
          </dl>
        </div>
        <aside class="u-secondary">
          <div class="c-who-is-involved">
            <h2>Who's involved</h2>
            <ul>
              <% page.who_is_involved.forEach(function(wii) {
                if(wii.value > 0) {
                  for(var i = 0; i<wii.value;i++) { %>
                    <li class="<%= wii.slug %>"><span class="tooltip"><%= wii.key %></span></li>
                  <% }
                }
              })%>
            </ul>
          </div>
          <div class="c-proscons">
            <% if (page.pros) { %>
            <div class="c-proscons__pros">
              <h2>Pros:</h2>
              <ul>
                <% page.pros.forEach(function(pro, i) { %>
                  <li><i class="fa fa-check"></i><div><%- pro.text %></div></li>
                <% }) %>
              </ul>
            </div>
            <% } if (page.cons) { %>
            <div class="c-proscons__cons">
              <h2>Cons:</h2>
              <ul>
                <% page.cons.forEach(function(con, i) { %>
                  <li><i class="fa fa-close"></i><div><%- con.text %></div></li>
                <% }) %>
              </ul>
            </div>
          </div>
        <% } %>
        </aside>
      </section>
    </li>
  <%}) %>

   </ul>
</div>
<% include components/footer.ejs %>
