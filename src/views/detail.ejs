<% include components/header.ejs %>
<article class="c-details">
  <section class="u-primary">
    <ul class="c-breadcrumbs">
      <li><a href="/">Home</a></li>
      <li><%= page.title %></li>
    </ul>
    <div class="c-headed-text">
      <h1><a href=""><%= page.title %></a></h1>
      <div class="c-body-copy divider">
        <%- page.body_copy %>
      </div>
    </div>
    <div class="two-columns-uneven">
      <% if(page.video.title) { %>
        <div class="c-video-player">
          <h2><%= page.video.title %></h2>
          <div class="c-video-player__container">
            <img src="<%= page.video.thumbnail %>" alt="<%= page.video.title %>">
          </div>
        </div>
      <% } %>
      <% if(page.process_image_link.full) { %>
      <div class="c-process-chart">
        <h2><%= page.title %> process chart</h2>
        <a class="c-lightbox" href="<%= page.process_image_link.full %>">
          <img src="<%= page.process_image_link.thumbnail %>" alt="<%= page.title %> process chart">
          <%= page.title %> process chart
        </a>
      </div>
      <% } %>
    </div>
    <section class="c-case-studies">
      <h1>Case Studies</h1>
      <div class="c-case-studies__container">
        <div class="c-case-studies__stub">
          <h2><%= page.case_study.title %></h2>
          <%- page.case_study.summary %>
        </div>
        <div class="c-case-studies__toggle_visible">
          <%- page.case_study.copy %>
          <blockquote class="c-case-studies__quote">
            <div class="quote_body"><%= page.case_study.quote %></div>
            <div class="quote_author"><%= page.case_study.quote_author %></div>
          </blockquote>
        </div>
      </div>
    </section>
  </section>
  <aside class="u-secondary">
    <div class="c-proscons">
      <% if (page.pros) { %>
      <div class="c-proscons__pros">
        <h2>Pros:</h2>
        <ul>
          <% page.pros.forEach(function(pro, i) { %>
            <li><i class="fa fa-check"></i><div><%- pro.text %></div></li>
          <% }) %>
        </ul>
      </div>
      <% } if (page.cons) { %>
      <div class="c-proscons__cons">
        <h2>Cons:</h2>
        <ul>
          <% page.cons.forEach(function(con, i) { %>
            <li><i class="fa fa-close"></i><div><%- con.text %></div></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
    </div>
    <div class="c-cost">
      <h2>Cost</h2>
      <span>(per person):</span>
      <div class="c-cost__scale">
        <img src="<%= page.cost.image_link %>" alt="The scale can range from quite low to very high"/>
        <span class="c-cost__scale__label">0</span>
        <span class="c-cost__scale__label">&pound;100k</span>
      </div>
      <div class="c-cost__info">
        <%- page.cost.info %>
      </div>
    </div>
    <div class="c-help-info">
      <h2>Help:</h2>
      <div class="info">
        <%- page.helpline.info %>
      </div>
    </div>
  </aside>
</article>
<% include components/footer.ejs %>
